<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../partials/head') %>
  <script defer src="/js/script.js"></script>
  <title>ðŸ•Š Home</title>
</head>

<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper blue darken-3">
        <a href="" class="brand-logo left">ðŸ•Š Home</a>
        <ul class="right">
          <li style="padding-top: 3%;"><a href="/users" class="material-icons">person</a></li>
        </ul>
      </div>
    </nav>
  </div>
  <header class="container">

  </header>
  <main class="container">
    <ul class="collection">
      <% tweets.forEach( tweet => { %>
      <li style="padding-top: 3%;" class="collection-item avatar">
        <img src=<%= user.avatarUrl%> alt="Profile Image" class="circle">
        <span style="font-size: small; color: cornflowerblue;" class="title"><%= user.name%></span>
        <p><%= tweet.content%>
        </p>
        <!-- TODO Edit and Delete action here -->
        
        <select id="changeStatus" name="changeStatus">
          <option value="" disabled selected></option>
          <option id="delete" value="delete">Delete</option>
          <option id="edit" value="edit">Edit</option>
        </select>
     
        <!-- TODO comments here -->
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="comments" class="materialize-textarea"></textarea>
                <label for="comments" >Comments</label>
                <a style="margin-left: 90%;" class="btn-floating waves-effect waves-light blue lighten-3"><i class="tiny material-icons">send</i></a>
              </div>
            </div>
          </form>
        </div>
      </li>
      <% }) %>
      <script>
        const elems = document.querySelectorAll('select');
        M.FormSelect.init(elems);
    </script>
    </ul>
    <!-- new code below -->

    <div class="card-action">
      <form action="/tweets" method="POST" enctype="multipart/form-data">
        <input type="text" name="content">
        <a class="btn-floating waves-effect waves-light blue lighten-3"><i class="tiny material-icons">add_a_photo</i></a>
        <button id="tweetButton" style="margin-left: 80%;" type="submit" class="btn white-text blue darken-3">tweet</button>
      </form>
    </div>
   

  </main>
  <!-- console.log(tweets)%> -->
  <!-- console.log(user)%> -->

</body>

</html>
